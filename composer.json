{
    "name": "muffin/skeleton",
    "description": "A plugin skeleton builder for CakePHP 3",
    "type": "project",
    "keywords": [
        "cakephp",
        "plugin",
        "skeleton"
    ],
    "homepage": "https://github.com/usemuffin/skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Jad Bitar"
        }
    ],
    "support": {
        "issues": "https://github.com/usemuffin/skeleton/issues",
        "source": "https://github.com/usemuffin/skeleton"
    },
    "require-dev": {
        "cakephp/cakephp": "~3.0",
        "cakephp/cakephp-codesniffer": "^2.0",
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Muffin\\Skeleton\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Muffin\\Skeleton\\Test\\": "tests"
        }
    },
    "scripts": {
        "pre-install-cmd": ["Muffin\\Skeleton\\Console\\Installer::preInstall"],
        "post-install-cmd": [
            "Muffin\\Skeleton\\Console\\Installer::postInstall",
            "composer update"
        ],
        "test": [
            "phpcs src tests",
            "phpunit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
